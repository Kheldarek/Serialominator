<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_menu"
    tools:context="com.psfs.pz.serialominator.MainMenu">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favs"
        android:src="@drawable/fav"
        android:scaleType="center"
        android:longClickable="true"
        android:background="#000000"
        android:layout_marginTop="61dp"
        android:layout_gravity="right"
        android:contentDescription="@string/menu_strings"
        android:focusable="true"
        android:onClick="favs_Click"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/search"
        android:layout_toStartOf="@+id/search"
        android:layout_marginRight="66dp"
        android:layout_marginEnd="66dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:src="@drawable/search"
        android:layout_alignTop="@+id/favs"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp"
        android:scaleType="center"
        android:background="#ffffff"
        android:contentDescription="@string/search_txt"
        android:onClick="search_Click" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar"
        android:src="@drawable/calendar"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/favs"
        android:layout_alignStart="@+id/favs"
        android:background="#ffffff"
        android:contentDescription="@string/calendar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo"
        android:layout_alignBottom="@+id/calendar"
        android:layout_alignRight="@+id/search"
        android:layout_alignEnd="@+id/search"
        android:src="@drawable/todo"
        android:layout_alignTop="@+id/calendar"
        android:layout_toRightOf="@+id/favs"
        android:layout_toEndOf="@+id/favs"
        android:contentDescription="@string/toto_desc" />

</RelativeLayout>
