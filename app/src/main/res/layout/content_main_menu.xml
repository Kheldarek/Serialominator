<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_menu"
    tools:context=".activities.MainMenu"
    android:background="#6699ff">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favs"
        android:src="@drawable/fav_menu"
        android:scaleType="center"
        android:longClickable="true"
        android:background="#000000"
        android:layout_gravity="right"
        android:contentDescription="@string/menu_strings"
        android:focusable="true"
        android:onClick="favs_Click"
        android:nestedScrollingEnabled="true"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:src="@drawable/search"
        android:scaleType="center"
        android:background="#ffffff"
        android:contentDescription="@string/search_txt"
        android:onClick="search_Click"
        android:layout_alignTop="@+id/favs"
        android:layout_alignLeft="@+id/todo"
        android:layout_alignStart="@+id/todo"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar"
        android:src="@drawable/calendar"
        android:background="#ffffff"
        android:contentDescription="@string/calendar"
        android:onClick="calendar_Click"
        android:contextClickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/todo"
        android:src="@drawable/todo"
        android:contentDescription="@string/toto_desc"
        android:onClick="todo_Click"
        android:background="#2e6894"
        android:layout_alignTop="@+id/calendar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

</RelativeLayout>
