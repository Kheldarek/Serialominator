<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_menu"
    tools:context="com.psfs.pz.serialominator.MainMenu">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favs"
        android:src="@drawable/fav"
        android:scaleType="center"
        android:longClickable="true"
        android:background="#000000"
        android:layout_marginTop="61dp"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/favsLabel"
        android:layout_alignEnd="@+id/favsLabel"
        android:contentDescription="@string/menu_strings"
        android:focusable="true"
        android:onClick="favs_Click"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/menu_strings"
        android:id="@+id/favsLabel"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:textColor="#000000"
        android:layout_below="@+id/favs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:src="@drawable/search"
        android:layout_alignTop="@+id/favs"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp"
        android:scaleType="center"
        android:background="#ffffff"
        android:contentDescription="@string/search_txt"
        android:onClick="search_Click" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/search_txt"
        android:id="@+id/searchLabel"
        android:layout_below="@+id/search"
        android:layout_alignRight="@+id/search"
        android:layout_alignEnd="@+id/search"
        android:textColor="#000000" />
</RelativeLayout>
